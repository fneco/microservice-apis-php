#!/usr/bin/env bash

OAS_YAML="openapi/oas.yaml"
TOP_LEVEL_DIR="$(git rev-parse --show-toplevel)"
SCRIPT_DIRECTORY="$(dirname "$0")"

export OAS_YAML
echo "OAS_YAML=$OAS_YAML"

export TOP_LEVEL_DIR
echo "TOP_LEVEL_DIR=$TOP_LEVEL_DIR"

export SCRIPT_DIRECTORY
echo "SCRIPT_DIRECTORY=$SCRIPT_DIRECTORY"

docker compose --file "$SCRIPT_DIRECTORY/docker-compose-util.yml" run --rm "$@"
